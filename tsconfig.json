{
  "compilerOptions": {
    "target": "ES2020",                       
    "module": "ESNext",                        
    "moduleResolution": "node",                
    "esModuleInterop": true,                   
    "forceConsistentCasingInFileNames": true,  
    "skipLibCheck": true,                      
    "strict": true,                            
    "outDir": "./dist",                        
    "rootDir": "./src",                        
    "resolveJsonModule": true,                 
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true                             
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
